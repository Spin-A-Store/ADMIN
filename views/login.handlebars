  <body class="login">
  <div class="loading" style=" display: none;">Loading&#8230;</div>
    <div>
      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
      <div class="alert alert-danger" id="alertmessage" style=" display: none;">
</div>
        <div class="animate form login_form">
          <section class="login_content">
            <form id="loginform" >
              <h1>Login Form</h1>
              <div>
                <input type="text" class="form-control" placeholder="Username" name="username"/>
              </div>
              <div>
                <input type="password" class="form-control" placeholder="Password" name="password" />
              </div>
              <div>
                <a class="btn btn-default submit" href="" id="loginbutton">Log in</a>
                <a class="reset_pass" href="#">Lost your password?</a>
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <p class="change_link">New to site?
                  <a href="#signup" class="to_register"> Create Account </a>
                </p>

                <div class="clearfix"></div>
                <br />

                <div>
                  <h1><img src="assets/img/saslogo.png" alt="Smiley face" height="42" width="42"> Spin-A-Store!</h1>
                  <p>©2016 All Rights Reserved. Spin-A-Store </p>
                </div>
              </div>
            </form>
          </section>
        </div>
       <div class="alert alert-danger" id="alertmessage" style=" display: none;">
</div>
        <div id="register" class="animate form registration_form">
          <section class="login_content">
            <form id="registerform">
              <h1>Create Account</h1>
              <div>
                <input type="text" class="form-control" placeholder="Store Name" required="required" name="storename" />
              </div>
              <div>
                <input type="email" class="form-control" placeholder="Email" required="required" name="username"/>
              </div>
              <div>
                <input type="password" class="form-control" placeholder="Password" required="required" name="password"/>
              </div>
              <div>
                <a class="btn btn-default submit" href="index.html" id="registerbutton">Submit</a>
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <p class="change_link">Already a member ?
                  <a href="#signin" class="to_register"> Log in </a>
                </p>

                <div class="clearfix"></div>
                <br />

                <div>
                  <h1> <img src="assets/img/saslogo.png" alt="Smiley face" height="42" width="42">  Spin-A-Store</h1>
                  <p>©2016 All Rights Reserved. Spin-A-Store</p>
                </div>
              </div>
            </form>
          </section>
        </div>
      </div>
    </div>
  </body>

